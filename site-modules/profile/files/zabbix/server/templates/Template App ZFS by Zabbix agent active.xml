i<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2021-10-13T19:15:45Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template App ZFS by Zabbix agent active</template>
            <name>Template App ZFS by Zabbix agent active</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>ZFS</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>ZFS Fileset discovery</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>zfs.fileset.discovery</key>
                    <delay>2h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#FILESETNAME}</macro>
                                <value>{$ZFS.FILESET.MATCHES}</value>
                                <formulaid>A</formulaid>
                            </condition>
                            <condition>
                                <macro>{#FILESETNAME}</macro>
                                <value>{$ZFS.FILESET.NOT_MATCHES}</value>
                                <operator>NOT_MATCHES_REGEX</operator>
                                <formulaid>B</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>2w</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>ZFS fileset {#FILESETNAME} refer</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>zfs.get.fsinfo[{#FILESETNAME},refer]</key>
                            <history>1w</history>
                            <units>Bytes</units>
                            <applications>
                                <application>
                                    <name>ZFS</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                        </item_prototype>
                        <item_prototype>
                            <name>ZFS fileset {#FILESETNAME} used</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>zfs.get.fsinfo[{#FILESETNAME},used]</key>
                            <history>1w</history>
                            <units>Bytes</units>
                            <applications>
                                <application>
                                    <name>ZFS</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>ZFS fileset {#FILESETNAME} usage</name>
                            <graph_items>
                                <graph_item>
                                    <color>C80000</color>
                                    <item>
                                        <host>Template App ZFS by Zabbix agent active</host>
                                        <key>zfs.get.fsinfo[{#FILESETNAME},refer]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>1</sortorder>
                                    <color>00C800</color>
                                    <item>
                                        <host>Template App ZFS by Zabbix agent active</host>
                                        <key>zfs.get.fsinfo[{#FILESETNAME},used]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                    <request_method>POST</request_method>
                </discovery_rule>
                <discovery_rule>
                    <name>ZFS Pool discovery</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>zfs.pool.discovery</key>
                    <delay>2h</delay>
                    <lifetime>2w</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Zpool {#POOLNAME} health</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>zfs.zpool.health[{#POOLNAME}]</key>
                            <history>1w</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <applications>
                                <application>
                                    <name>ZFS</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{regexp(ONLINE)}=0 and {strlen(0)}&lt;&gt;0</expression>
                                    <name>ZFS Pool {#POOLNAME} in {ITEM.LASTVALUE} state</name>
                                    <priority>HIGH</priority>
                                    <description>There were problems detected with your ZFS pool. Please check your ZFS pools in order to fix them.&#13;
&#13;
Hint: You can use 'zpool status' to get an overview of the ZFS pools status</description>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <request_method>POST</request_method>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$ZFS.FILESET.MATCHES}</macro>
                    <value>.+</value>
                </macro>
                <macro>
                    <macro>{$ZFS.FILESET.NOT_MATCHES}</macro>
                    <value>(lxd/images|lxd/deleted</value>
                </macro>
            </macros>
        </template>
    </templates>
</zabbix_export>

